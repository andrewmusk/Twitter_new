<h1>  <%= link_to "Twitter", users_home_path%></h1>
<div>
  <h2>
    <%=link_to current_user.name, users_path%>
    <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
  </h2>
</div>
<div>
  <%= render 'newtweet' %>
</div>
<div>
  <h2>Tweets</h2>
    <% @tweets.reverse_each do |tweet| %>
    <% current_user.followers.each do |follow|%>
      <% follow %>
    <% end %>
      <% if current_user.following(tweet.user_id) || current_user.id == tweet.user_id %>
        <p>
          <ul>
            <li>
            <strong>
              <% person = User.find(tweet.user_id)  %>
              <%= person.username  %>
              <%=tweet.created_at  %>
            </strong>
            <%= tweet.tweet %>
            <% if person == current_user%>
              <%= link_to 'Delete', tweet,
                     method: :delete,
                     data: { confirm: 'Are you sure?' } %>
            <% end %> 
            </li>
          </ul>
        </p>
      <% end -%>
    <% end %>
</div>
<div>
  <%= link_to "Users", users_all_path%>
</div>
